extends ../../layout/default.pug
include ../../mixins/flash-messages.pug
include ../../mixins/category-index.pug
block main
  h1.mb-4 Tai khoan
  .card.mb-3
    .card-header
    .card-body
      +flashMessage()
      .row.mb-3
        .col-4
          a(href=`${systemAdmin}/accounts/create`, class="btn btn-sm btn-outline-success") Thêm Mới Tai Khoan
  .card.mb-3
    .card-header Danh sach
    .card-body
          table(class="table table-hover table-sm" check-box-multi)         
            thead
            tr
              th
                input(type="checkbox" name="checkall")
              th stt
              th tên đây dủ
              th Quyền
              th email
              th phone
              th avatar
              th hanh dong
            tbody
            each item,index in roles
              tr
                td
                  input(type="checkbox" name="checkone" value=item.id)
                td #{index+1}
                td #{item.fullname}
                td #{item.role}  
                td #{item.email}
                td #{item.phone}
                td
                  img(src=item.avatar, alt=item.title,
                      width="100px"
                      height="auto")
                td
                  if item.status == 'active'
                    a(href="javascript:;", class="badge badge-success" data-id=item.id button-change-status=item.status) Hoạt động
                  else
                    a(href="javascript:;", class="badge badge-danger" data-id=item.id button-change-status=item.status) Ngừng hoạt động
                td
                  a(href=`${systemAdmin}/accounts/detail/${item.id}` class="btn btn-secondary btn-sm ml-1" button-detail) chi tiết
                  a(href=`${systemAdmin}/accounts/edit/${item.id}` class="btn btn-warning btn-sm ml-1" button-edit) sua
                  button(class="btn btn-danger btn-sm ml-1" button-change-deleted data-id=item.id) xoa