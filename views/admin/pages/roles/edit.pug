
extends ../../layout/default.pug
include ../../mixins/flash-messages.pug
block main
  h1(class="mb-4") #{pageTitle}
  +flashMessageError()
  form(
    action=`${systemAdmin}/roles/edit/${role.id}?_method=PATCH`
    method="POST"
    id="form-create-product")
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required 
        value=role.title
      )
    div.form-group
      label(for="desc") Mô tả
      textarea(
        class="form-control texarea-mce"
        id="desc"
        name="description"
        rows="5"
        textarea-mce
      ) !{role.description}
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới