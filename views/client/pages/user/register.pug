extends ../../layout/user.pug
include ../../mixins/flash-messages.pug
block main
  .container.register-page.my-5
    .row.justify-content-center
      .col-lg-5.col-md-7
        .bg-white.p-4.rounded.shadow-sm
          h3.text-center.font-weight-bold.mb-4 Đăng ký tài khoản
          +flashMessage()
          +flashMessageError()
          form(action="/user/register" method="POST")
            .form-group
              label.font-weight-bold(for="fullName") Họ và tên
              input#fullName.form-control(type="text", name="fullName", placeholder="Nhập họ và tên", required)
            .form-group
              label.font-weight-bold(for="email") Email
              input#email.form-control(type="email", name="email", placeholder="Nhập email", required)
            .form-group
              label.font-weight-bold(for="phone") Số điện thoại
              input#phone.form-control(type="text", name="phone", placeholder="Nhập số điện thoại", required)
            .form-group
              label.font-weight-bold(for="password") Mật khẩu
              input#password.form-control(type="password", name="password", placeholder="Nhập mật khẩu", required)
            .form-group
              label.font-weight-bold(for="confirmPassword") Xác nhận mật khẩu
              input#confirmPassword.form-control(type="password", name="confirmPassword", placeholder="Nhập lại mật khẩu", required)
            button.btn.btn-primary.btn-block.font-weight-bold(type="submit") Đăng ký
            .text-center.mt-3
              span Đã có tài khoản? 
              a.text-primary(href="/login") Đăng nhập
