extends ../../layout/user.pug
include ../../mixins/flash-messages.pug
block main
  .container.register-page.my-5
    .row.justify-content-center
      .col-lg-5.col-md-7
        .bg-white.p-4.rounded.shadow-sm
          h3.text-center.font-weight-bold.mb-4 Quên mật khẩu
          +flashMessage()
          +flashMessageError()
          form(action="/user/forgot-password" method="POST")
            .form-group
              label.font-weight-bold(for="email") Email
              input#email.form-control(type="email", name="email", placeholder="Nhập email", required)
            button.btn.btn-primary.btn-block.font-weight-bold(type="submit") Gửi mail xác thực
